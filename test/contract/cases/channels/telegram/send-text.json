{
  "name": "send text content",
  "request": {
    "method": "POST",
    "path": "/channels/telegram/messages",
    "query": {
    },
    "headers": {
      "content-type": "application/json",
      "x-api-token": "some-api-token"
    },
    "body": {
      "from": "SENDER ID",
      "to": "RECIPIENT ID",
      "contents": [{
        "type": "text",
        "text": "some text"
      }]
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "content-type": "application/json"
    },
    "body": {
      "id": "CREATED MESSAGE ID",
      "direction": "OUT",
      "from": "SENDER ID",
      "to": "RECIPIENT ID",
      "contents": [{
        "type": "text",
        "text": "some text"
      }]
    }
  }
}
